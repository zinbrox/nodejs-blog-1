            input(type='hidden' value=blog._id name='blogId') 
            input(type='submit' value='Edit', style='button' formaction='/updateComment')
            =" "
            input(type='submit' value='Delete', style='button' formaction='/blog/deleteComment')
            =" "
            br
            br
    form(action='blog/addComment' method='post')
        input(type='hidden' value=blog._id name="blogId")
        input(type='hidden' value= req.session.name name="userName")
        input(type='hidden' value= req.session.email name="email")
        textarea(rows=4, cols=50 type='text' name='commentBody')
        =" "
        input(type='submit' style="button" value='Comment')

