    for comment in blog.comments
        form(action='!!!' method='post')
            li <strong> Comment ID: </strong> #{comment._id}
            li  <strong> Comment: </strong> #{comment.comment}
            li  <strong> User: </strong> #{comment.userId}
            li <strong> Timestamp: </strong> #{comment.createdAt}
            input(type='hidden' value=comment._id name='commentId')
            input(type='hidden' value=comment.userId name='commentEmail')
